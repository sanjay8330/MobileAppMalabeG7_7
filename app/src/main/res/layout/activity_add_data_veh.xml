<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".addDataVeh">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/abc" />

            <EditText
                android:id="@+id/inVehNum"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="Vehicle Number"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <EditText
                android:id="@+id/inVeheDate"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="The Date"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <EditText
                android:id="@+id/inVehModel"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="Vehicle Model"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <EditText
                android:id="@+id/inVehColor"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="Vehicle Color"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <EditText
                android:id="@+id/inVehManu"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="Manufacture Year"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <EditText
                android:id="@+id/InNicVehOw"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="NIC Of Vehicle Owner"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <EditText
                android:id="@+id/InVehImg"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:elevation="10dp"
                android:hint="Image URL"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textColorHint="@color/silver" />

            <Button
                android:id="@+id/vehIns"
                android:layout_width="185dp"
                android:layout_height="52dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:elevation="5dp"
                android:text="Insert"
                android:textAllCaps="false"
                android:textColor="@color/lightWhite"
                android:textSize="20dp" />

            <Button
                android:id="@+id/vehBack"
                android:layout_width="185dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:elevation="5dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/lightWhite"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>